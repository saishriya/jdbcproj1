package com.test;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.SQLException;
import java.sql.Statement;

public class AuthorAudit {
	
	public static void main(String[] args) throws Exception {
		
		inserted();
	}
		public static void inserted() throws SQLException {
		Connection con = null;
		try
		{
			Class.forName("com.mysql.cj.jdbc.Driver");
			con = DriverManager.getConnection("jdbc:mysql://localhost:3306/sakila","root","Shriya!123");
			Statement st = con.createStatement();
			st.executeUpdate("insert into author (id,name,country,last_update) values (2,'Priya','UK',now())");
			System.out.println("Inserted");
			st.close();
		}catch(Exception e)
		{
			System.out.println(e);
		}
		finally
		{
			con.close();
		}
	}
}

